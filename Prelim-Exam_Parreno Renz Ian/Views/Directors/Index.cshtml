@model IEnumerable<MvcMovie.Models.Director>

@{ ViewData["Title"] = "Index"; }

<div align='center'>
    <h1>Director List</h1>
    <p>
        <a class="btn btn-primary" asp-action="Create">Create Director</a>
    </p>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <h2> @Html.DisplayNameFor(model => model.Name): </h2>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        <h4> @Html.DisplayFor(modelItem => item.Name) </h4>
    </td>
    <td>
        <div class="text-md-right">
            <a class="btn btn-small btn-success" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
            <a class="btn btn-small btn-secondary" asp-action="Details" asp-route-id="@item.ID">Details</a> |
            <a class="btn btn-small btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
        </div>
    </td>
</tr>
}
        </tbody>
    </table>
